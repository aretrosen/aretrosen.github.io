</header>

<script>
  const menusearch = document.querySelectorAll("button.menu-search");
  const menuitem = document.getElementById("menu-item");
  const menuopen = document.getElementById("menu-open");
  const menuclose = document.getElementById("menu-close");

  menusearch.forEach((ms) => {
    ms.addEventListener("click", () => {
      menuitem?.classList.toggle("hidden");
      menuopen?.classList.toggle("hidden");
      menuclose?.classList.toggle("hidden");
    });
  });

  const headershadow = document.querySelector("header");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 150) {
      headershadow?.classList.remove("py-10");
      headershadow?.classList.add("py-4", "shadow-lg");
    } else {
      headershadow?.classList.remove("py-4", "shadow-lg");
      headershadow?.classList.add("py-10");
    }
  });

  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }
    return "light";
  })();

  const themebutton = document.querySelectorAll("button.theme-toggle");
  const themelight = document.querySelectorAll("svg.theme-light-svg");
  const themedark = document.querySelectorAll("svg.theme-dark-svg");

  if (theme === "light") {
    document.documentElement.classList.remove("dark");
    themedark.forEach((themed) => {
      themed.classList.remove("hidden");
    });
    themelight.forEach((themed) => {
      themed.classList.add("hidden");
    });
  } else {
    document.documentElement.classList.add("dark");
    themelight.forEach((themed) => {
      themed.classList.remove("hidden");
    });
    themedark.forEach((themed) => {
      themed.classList.add("hidden");
    });
  }

  window.localStorage.setItem("theme", theme);

  themebutton.forEach((themebutt) => {
    themebutt.addEventListener("click", () => {
      const element = document.documentElement;
      element.classList.toggle("dark");

      const isDark = element.classList.contains("dark");
      if (isDark) {
        localStorage.setItem("theme", "dark");
        themelight.forEach((themed) => {
          themed.classList.remove("hidden");
        });
        themedark.forEach((themed) => {
          themed.classList.add("hidden");
        });
      } else {
        localStorage.setItem("theme", "light");
        themedark.forEach((themed) => {
          themed.classList.remove("hidden");
        });
        themelight.forEach((themed) => {
          themed.classList.add("hidden");
        });
      }
    });
  });
</script>
