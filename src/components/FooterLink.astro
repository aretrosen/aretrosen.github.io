---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  className?: string;
}

const { href, className, ...props } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class:list={[
    "flex items-center text-stone-100 w-40 sm:w-48 gap-2 p-2 divide-x-2 rounded-lg shadow-2xl shadow-black/30 dark:shadow-white/20 transition hover:-translate-y-2 duration-300 text-xl sm:text-2xl tracking-wide",
    className,
  ]}
  {...props}
>
  <slot />
</a>
